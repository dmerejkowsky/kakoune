def assert_eq(actual, expected) {
    if (actual != expected) {
        throw("${actual} != ${expected}")
    }
}

kak.set_option("buffer", "readonly", true)
assert_eq(kak.get_option("bool", "readonly"), true)


kak.set_option("buffer", "tabstop", 5)
assert_eq(kak.get_option("int", "tabstop"), 5)

kak.set_option("global", "ui_options", ["ncurses_assistant=dilbert"])
